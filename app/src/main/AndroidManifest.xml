<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.learnwithash.everythingandroid">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        <activity
            android:name=".NavigationDrawerActivity"
            android:launchMode="singleTask">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Features.PhoneBatteryActivity"
            android:launchMode="singleTask"/>

        <activity android:name=".Features.NotificationsActivity"
            android:launchMode="singleTask"/>

        <activity android:name=".Features.NotificationResultActivity"
            android:launchMode="singleTask"/>

        <activity android:name=".Features.AnimationActivity"
            android:launchMode="singleTask"/>

    </application>

</manifest>
