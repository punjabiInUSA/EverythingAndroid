<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="170sp"
        android:layout_marginTop="60dp"
        android:text="7"
        android:id="@+id/numberText"/>



    <TextView
        android:id="@+id/subText1"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/numberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="New item received"/>

    <TextView
        android:id="@+id/subText2"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:layout_below="@id/subText1"
        android:text="more points received"/>

    <Button
        android:id="@+id/button1"
        android:layout_below="@id/subText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:layout_gravity="center_horizontal"
        android:text="Animate"/>

</RelativeLayout>