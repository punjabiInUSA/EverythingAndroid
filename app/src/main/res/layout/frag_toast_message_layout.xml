<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/toast_frag_container">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rg_container">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_one"
            android:text="Short"
            android:textSize="20sp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_two"
            android:text="Long"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_three"
            android:text="Custom"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"/>

    </RadioGroup>




    <Button
        android:id="@+id/btn_repeat"
        android:layout_below="@+id/rg_container"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:drawableStart="@drawable/repeat_btn_icon"
        android:paddingStart="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp">
        <Button
            android:id="@+id/nav_secondary_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/NavigationSecondaryButton"
            android:layout_marginEnd="10dp"
            android:elevation="5dp"/>

        <Button
            android:id="@+id/nav_primary_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            style="@style/NavigationPrimaryButton"
            android:elevation="5dp"/>
    </LinearLayout>

</RelativeLayout>